<% layout('layouts/boilerplate') %>

<div class="row">
  <h1 class="text-center">Update Yodoger</h1>
  <div class="col-6 offset-3">
    <form
      action="/yodogers/<%=singleYodoger._id%>?_method=PUT"
      method="POST"
      class="needs-validation"
      novalidate
    >
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="yodoger[title]"
          value="<%=singleYodoger.title %>"
          required
        />
        <div class="valid-feedback">Looks Good</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          id="location"
          name="yodoger[location]"
          value="<%=singleYodoger.location %>"
          required
        />
        <div class="valid-feedback">Looks Good</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="image">Image Url</label>
        <input
          class="form-control"
          type="text"
          id="image"
          name="yodoger[image]"
          value="<%=singleYodoger.image %>"
          required
        />
        <div class="valid-feedback">Looks Good</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="price">Yodoger Price</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input
            type="text"
            class="form-control"
            id="price"
            placeholder="0.00"
            aria-label="price"
            aria-describedby="price-label"
            name="yodoger[price]"
            value="<%=singleYodoger.price %>"
            required
          />
          <div class="valid-feedback">Looks Good</div>
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="yodoger[description]"
          required
        >
          <%= singleYodoger.description%></textarea
        >
        <div class="valid-feedback">Looks Good</div>
      </div>
      <div class="mb-3">
        <button class="btn btn-info">Update Yodoger</button>
      </div>
    </form>
    <button class="btn btn-primary">
      <a class="text-light" href="/yodogers/<%= singleYodoger._id%>"
        >All Yodogers</a
      >
    </button>
  </div>
</div>
