<% layout('layouts/boilerplate') %>

<div class="row">
  <div class="col-6 offset-3">
    <div class="card mb-3">
      <img src="<%= singleYodoger.image%>" class="card-img-top" alt="..." />
      <div class="card-body">
        <h5 class="card-title"><%= singleYodoger.title%></h5>
        <p class="card-text"><%= singleYodoger.description%></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item text-muted"><%= singleYodoger.location%></li>
        <li class="list-group-item">$<%= singleYodoger.price%>/night</li>
      </ul>
      <div class="card-body">
        <a
          class="card-link btn btn-info"
          href="/yodogers/<%=singleYodoger._id%>/edit"
          >Edit Yodoger</a
        >
        <a class="card-link btn btn-primary" href="/yodogers">Back</a>
        <form
          class="d-inline"
          action="/yodogers/<%=singleYodoger._id%>?_method=DELETE"
          method="POST"
        >
          <button class="btn btn-danger">Delete</button>
        </form>
      </div>
      <div class="card-footer text-muted">2 days ago</div>
    </div>
  </div>
</div>
